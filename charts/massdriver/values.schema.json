{
  "type": "object",
  "required": ["dockerhub", "domain", "licenseKey", "postgres", "smtp"],
  "properties": {
    "dockerhub": {
      "type": "object",
      "description": "Docker Hub credentials for pulling images",
      "required": ["username", "accessToken"],
      "properties": {
        "username": {
          "type": "string",
          "minLength": 1
        },
        "accessToken": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "domain": {
      "type": "string",
      "minLength": 1,
      "description": "The domain for your Massdriver deployment, e.g., 'massdriver.cloud'"
    },
    "licenseKey": {
      "type": "string",
      "minLength": 1,
      "description": "The license key for your Massdriver deployment"
    },
    "oidc": {
      "type": "array",
      "description": "OpenID Connect configurations for authentication",
      "items": {
        "type": "object",
        "required": ["name", "authorizeUrl", "tokenUrl", "clientId", "clientSecret"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "The name of the OIDC provider",
            "pattern": "^[a-zA-Z0-9]+$"
          },
          "authorizeUrl": {
            "type": "string",
            "minLength": 1,
            "description": "The authorization URL for the OIDC provider"
          },
          "tokenUrl": {
            "type": "string",
            "minLength": 1,
            "description": "The token URL for the OIDC provider"
          },
          "clientId": {
            "type": "string",
            "minLength": 1,
            "description": "The client ID for the OIDC provider"
          },
          "clientSecret": {
            "type": "string",
            "minLength": 1,
            "description": "The client secret for the OIDC provider"
          }
        }
      }
    },
    "postgres": {
      "type": "object",
      "description": "PostgreSQL database configuration",
      "required": ["username", "password", "hostname", "port"],
      "properties": {
        "username": {
          "type": "string",
          "minLength": 1
        },
        "password": {
          "type": "string",
          "minLength": 1
        },
        "hostname": {
          "type": "string",
          "minLength": 1
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      }
    },
    "smtp": {
      "type": "object",
      "description": "SMTP server configuration for sending emails",
      "required": ["hostname", "server", "port", "username", "password", "fromAddress"],
      "properties": {
        "hostname": {
          "type": "string",
          "minLength": 1
        },
        "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
        },
        "username": {
          "type": "string",
          "minLength": 1
        },
        "password": {
          "type": "string",
          "minLength": 1
        },
        "fromAddress": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}